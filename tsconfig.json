{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["es2019", "dom"],
    "typeRoots": ["node_modules/@types", "src/types"],
    "types": ["node", "express", "phaser", "jest", "supertest", "react", "react-dom", "recharts"],
    "allowSyntheticDefaultImports": true,
    "rootDirs": ["src", "engine", "frontend", "schemas", "server"],
    "baseUrl": "./",
    "paths": {
      "phaser": ["./phaser-runtime"]
    },
    "jsx": "react-jsx"
  },
  "include": ["src/**/*", "engine/**/*", "frontend/**/*", "schemas/**/*", "server/**/*"]
}

{
  "type":"object",
  "properties":{
    "allianceId":{"type":"string"},
    "name":{"type":"string","minLength":3,"maxLength":30},
    "tag":{"type":"string","minLength":2,"maxLength":5},
    "color":{"type":"string","pattern":"^#[0-9A-Fa-f]{6}$"},
    "members":{
      "type":"array",
      "minItems":1,
      "maxItems":30,
      "items":{
        "type":"object",
        "properties":{
          "playerId":{"type":"string"},
          "role":{"enum":["leader","officer","member"]}
        },
        "required":["playerId","role"]
      }
    },
    "memberLimit":{"type":"integer","minimum":7,"maximum":30},
    "forum":{
      "type":"array",
      "items":{
        "type":"object",
        "properties":{
          "postId":{"type":"string"},
          "authorId":{"type":"string"},
          "timestamp":{"type":"number"},
          "content":{"type":"string","minLength":1}
        },
        "required":["postId","authorId","timestamp","content"]
      }
    },
    "espionageReports":{
      "type":"array",
      "items":{
        "type":"object",
        "properties":{
          "reportId":{"type":"string"},
          "fromPlayer":{"type":"string"},
          "timestamp":{"type":"number"},
          "details":{"type":"object"}
        },
        "required":["reportId","fromPlayer","timestamp","details"]
      }
    }
  },
  "required":["allianceId","name","tag","color","members","memberLimit"]
}

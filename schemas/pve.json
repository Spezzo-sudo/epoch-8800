{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PveConfig",
  "type": "object",
  "properties": {
    "missions": {"type": "array", "items": {"$ref": "#/definitions/mission"}}
  },
  "definitions": {
    "mission": {
      "type": "object",
      "properties": {
        "id": {"type": "string"},
        "name": {"type": "string"},
        "description": {"type": "string"},
        "type": {"type": "string"},
        "waves": {"type": "array", "items": {"$ref": "#/definitions/wave"}},
        "buildPhaseDuration": {"type": "number"},
        "rewards": {"type": "object"}
      },
      "required": ["id","name","description","type","waves","buildPhaseDuration","rewards"]
    },
    "wave": {
      "type": "object",
      "properties": {
        "enemies": {"type": "array", "items": {"type": "object"}},
        "spawnDelay": {"type": "number"}
      },
      "required": ["enemies","spawnDelay"]
    }
  },
  "required": ["missions"]
}
